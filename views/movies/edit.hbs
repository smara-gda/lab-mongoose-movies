<h2>Edit Movie</h2>
{{#with movie}}
<form action="/movies/{{_id}}" method="POST">
     <label for="input-title">Title</label>
    <input type="text" id="input-title" name="edittitle" placeholder="Title" value="{{title}}" required/>

    <label for="input-genre">Genre</label>
    <input type="text" id="input-genre" name="editgenre" value="{{genre}}"/>

    <label for="input-plot">Plot</label>
    <input type="text" id="input-plot" name="editplot" value="{{plot}}" />
    <button>Submit</button>
</form>
{{/with}}
